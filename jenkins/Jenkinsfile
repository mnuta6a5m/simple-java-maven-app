#!groovy
pipeline {
    agent any
   stages {

        stage('Build') {
            steps {
	    	emailext body: '', subject: 'Build Started', to: 'manjunath.ramareddy@mindtree.com'		    
                sh 'mvn -B -DskipTests clean package'
            }

        }
        stage('Test') {
            steps {
                sh 'mvn test'
	    }
            post {
            	always {
                	junit 'target/surefire-reports/*.xml'
            	}
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
	}
        stage('Email Notifications') {
		steps {
			script {
				if(currentBuild.currentResult == 'SUCCESS'){
					emailext body: '', subject: 'Build Success', to: 'manjunath.ramareddy@mindtree.com'
				} else if(currentBuild.currentResult == 'FAILURE'){
					emailext body: '', subject: 'Build Failed', to: 'manjunath.ramareddy@mindtree.com'			
				} else {
					emailext body: '', subject: 'Build Unstable', to: 'manjunath.ramareddy@mindtree.com'			

				}
			}
		}
        }	   
	   
    }
}
		
